{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "assets": [
      {
        "include": "mail/templates/**/*",
        "watchAssets": true,
        "outDir": "dist"
      },
      {
        "include": "templates/**/*",
        "outDir": "dist"
      },
      {
        "include": "courses/data/**/*.course.ts",
        "outDir": "dist"
      },
      {
        "include": "course-editor/views/**/*",
        "outDir": "dist"
      }
    ]
  }
}
